<%= form_for :account, url: "accounts" do |f| %>
  <%= f.text_field :email, class: "form-control", type: "email", placeholder: "Email address", required: "", autofocus: "" %>
  <%= f.password_field :password, class: "form-control", type: "password", placeholder: "Password", required: "" %>
  <%= f.password_field :password_confirm, class: "form-control", type: "password", placeholder: "Confirm Password", required: "" %>
  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
